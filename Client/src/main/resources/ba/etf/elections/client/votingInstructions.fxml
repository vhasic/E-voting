<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane minHeight="650.0" minWidth="1200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox>
         <children>
            <VBox alignment="TOP_CENTER" VBox.vgrow="SOMETIMES">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <children>
                  <Label text="Uputstvo za glasanje:">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Label text="- Označite samo jednu političku stranku, koaliciju ili nezavisnog kandidata ili onoliko kandidata koliko želite unutar jednog okvira">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label layoutX="44.0" layoutY="60.0" text="- Ukoliko ste označili nekog kandidata ili stranku a niste to željeli, ponovnim klikom možete poništiti označeno">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label layoutX="20.0" layoutY="112.0" text="- Nakon popunjavanja listića pitisnite &quot;Glasaj&quot; za predaju vašeg glasa">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label layoutX="20.0" layoutY="163.0" text="- Ukoliko je listić neispravno popunjen sistem će vam prijaviti grešku, nakon čega trebate kliknuti &quot;Ok&quot; i ispravno popuniti listić">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label layoutX="20.0" layoutY="214.0" text="- Ukoliko želite da predate nevažeći ili prazan listić pritisnite dugme &quot;Predaj prazan/nevažeći listić&quot;">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <VBox alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" left="10.0" right="10.0" top="270.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="btnNext" mnemonicParsing="false" text="Sljedeći list">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </content>
